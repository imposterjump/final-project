<link rel="stylesheet" href="/css/wishlist.css">
<%- include("./Partials/NavUser.ejs") %>
<%- include("./Partials/chat.ejs") %>
<div class='container'>
  <div class='window'>
    <div class='order-info'>
      <div class='order-info-content'>
        <h2>WishList</h2>
        <div class='line'></div>

        <% if (products.length > 0) { %>
          <% products.forEach((item) => { %>
            <table class='order-table'>
              <tbody>
                <tr>
                  <td>
                    <div class="product-wrapper">
                      <div class="image-container">
                        <img src="/uploads/<%= item.images[0] %>" alt="Product Image">
                      </div>
                      <div class="product-details">
                        <div class="product-name">
                          <%= item.itemName %>
                        </div>
                        <div class="product-price">$<%= item.price_after %></div>
                        <div class="product-quantity">
                          <input class="quantity-select" type="number" min="1" value="1">
                        </div>
                      </div>
                      <a class="delete-button" href="/wishlist/delete/<%= item._id %>">
                        <img class="delete-icon" src="images/delete.png" alt="Delete Product">
                      </a>
                      <a class="addcart-button" href="/cart/add/<%= item._id %>">
                        <img class="delete-icon" src="images/trolley-cart.png" alt="Delete Product">
                      </a>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="line"></div>
          <% }); %>
          
        <% } else { %>
          <p class="empty-cart">Your WishList is empty.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<footer>
  <%- include("./Partials/footer.ejs") %>
</footer>
