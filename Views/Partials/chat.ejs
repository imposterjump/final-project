<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
    <div class="chat-icon" onclick="openChat()">
        <img src="images\chat logo.png" alt="Chat Icon">
    </div>

    <div class="chat-window">
        <div class="header">
            <span class="title">Chat Bot</span>
            <button class="close-btn" onclick="closeChat()">Close</button>
        </div>
        <div class="chat-container">
            <iframe id="chat-iframe" width="100%" height="100%" allow="microphone;" src=""></iframe>
            <div class="opening-message">
                <p>Hello, how can I help you today?</p>
            </div>
        </div>
        <!-- Added close button -->
        <div class="close-button">
            <button class="black-button" onclick="closeChat()">X</button>
        </div>
    </div>

    <script>
        function openChat() {
            var iframe = document.getElementById('chat-iframe');
            iframe.src = "https://console.dialogflow.com/api-client/demo/embedded/d19734b5-b865-4a41-9747-61a06402c8c2";
            document.querySelector('.chat-window').style.display = 'block';
            document.querySelector('.chat-icon').style.display = 'none';
        }

        function closeChat() {
            var iframe = document.getElementById('chat-iframe');
            iframe.src = "";
            document.querySelector('.chat-window').style.display = 'none';
            document.querySelector('.chat-icon').style.display = 'block';
        }
    </script>
</body>

</html>
<link rel="stylesheet" href="/CSS/chat.css">