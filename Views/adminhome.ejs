<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard Home</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/CSS/adminhome.css">

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-272764433-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-272764433-1');
    </script>

</head>

<body style="background-color:rgb(214, 214, 214);">
    <%- include("./Partials/navadmin.ejs") %>
        <%- include("./Partials/localiztion.ejs") %>
            <section>
      
                </div>
                <div class="container">
                    <div class="row">
                        <div class="box">
                            <div class="box-title">Revenue</div>
                            <div class="box-content">
                                <span class="number"> <% let sum = 0; %>
              <% orders.forEach(order => { %>
                <% sum = sum + order.totalPrice; %>
              <% }) %>
              <%= sum %></span>

                                <div class="cart four">
                                    <i class="bx bxs-cart"></i>
                                </div>
                            </div>
                        </div>
                        <div class="box">
                            <div class="box-title">Total sales</div>
                            <div class="box-content">
                                <span class="number"><%= orders.length %></span>

                                <div class="cart">
                                    <i class="bx bxs-cart"></i>
                                </div>
                            </div>
                        </div>
                        <div class="box">
                            <div class="box-title">Number Of Visitors</div>
                            <div class="box-content">
                                <span class="number">55</span>

                                <div class="cart two">
                                    <i class="bx bxs-cart"></i>
                                </div>
                            </div>
                        </div>
                        <div class="box">
                            <div class="box-title">Registered Users</div>
                            <div class="box-content">
                                <span class="number"><%= users.length %></span>

                                <div class="cart three">
                                    <i class="bx bxs-cart"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row2">


                        <div class="recent-sales box">
                            <div class="title">Recent Sales</div>
                            <div class="sales-details">
                              <table class="details">
                                <tr>
                                  <th>Date</th>
                                  <th>Username</th>
                                  <th>Price</th>
                                  <th>Status</th>
                                </tr>
                                <% orders.slice(0, 5).reverse().forEach(order => { %>
                                  <tr>
                                    <td><%= order.dateOrdered %></td>
                                    <td><%= order.firstName + ' ' + order.lastName %></td>
                                    <td><%= order.totalPrice %></td>
                                    <td><%= order.status %></td>
                                  </tr>
                                <% }) %>
                              </table>
                            </div>
                          </div>
                          
                    
                        

                    </div>
                </div>
            </section>
            <script src="/js/adminhome.js"></script>
</body>

</html>