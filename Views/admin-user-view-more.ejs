<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/CSS/account_admin.css">
    <title>Document</title>


</head>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<body>
    <%- include("./Partials/localiztion.ejs") %>
        <%- include("./Partials/navadmin.ejs") %>
            <div class="container rounded bg-white mt-5 mb-5">
                <div class="row">
                    <div class="col-md-3 border-right">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                            <span class="font-weight-bold"><%= user1.username %></span>
                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Profile Settings</h4>
                            </div>
                            <div class="row mt-2">


                                <div class="col-md-12"><label class="labels">Email:</label><span><%=user1.email %></span></div>
                                <div class="col-md-12"><label class="labels">Mobile Number:</label><span><%=user1.phone_number %></span></div>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
            </div>
            </div>
            <div class="container">
                <div class="text2">
                    <h1>user Orders</h1>
                    <% if (orders.length === 0) { %>
                        <p>this user didnt make any orders yet.</p>
                        <% } else { %>
                            <% orders.forEach(order => { %>
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="product-name">Order</th>
                                            <th class="product-name">Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.products.forEach(pro => { %>
                                            <tr>
                                                <td class="product-name">
                                                    <%= pro.name %>
                                                </td>
                                                <td class="product-details">
                                                    <div>Date Ordered:
                                                        <%= order.dateOrdered.toLocaleDateString() %>
                                                    </div>
                                                    <div>Delivery Address:
                                                        <%= order.address %>
                                                    </div>
                                                    <div>Payment Method:
                                                        <%= order.paymentMethod %>
                                                    </div>
                                                    <div>Status:
                                                        <%= order.status %>
                                                    </div>
                                                    <div>Quantity:
                                                        <%= pro.quantity %>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% }) %>
                                    <% } %>
                </div>
            </div>
</body>

</html>