<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/cart.css">
</head>
<body>
  <h1>Cart</h1>
  
  <% if (product.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% product.forEach(function(item) { %>
          <tr>
            <td><%= item.itemName %></td>
            <td><%= item.price_after %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
  
  <a href="/">Back to Home</a>
</body>
</html>
