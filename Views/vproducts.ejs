
<%- include("./Partials/navadmin.ejs") %>
<% const productTypes = ['jackets', 'bottoms', 'tops', 'accessories']; %>

<% productTypes.forEach(type => { %>
  <section>
    <h2><%= type.charAt(0).toUpperCase() + type.slice(1) %></h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% arrproduct.filter(item => item.type === type).forEach(item => { %>
          <tr>
            <td><%= item.itemName %></td>
            <td>  <% item.images.forEach(function(image) { %>
              <img src="/uploads/<%= image %>" alt="Product Image" width="100">
            <% }); %></td>
            
            <td><%= item.price_after %></td>
            <td><a class="btn" href="/details/<%= item.id %>">Show More</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
<% }); %>


<style>
  section {
    margin-bottom: 30px;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #333;
    text-transform: capitalize;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #ccc;
    background-color: #fff;
  }

  th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ccc;
  }

  th {
    background-color: #f5f5f5;
    font-weight: bold;
    color: #333;
  }

  td {
    color: #555;
  }

  .btn {
    display: inline-block;
    padding: 5px 10px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 3px;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: #0056b3;
  }
</style>
